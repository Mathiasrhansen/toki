---
import Layout from "../layouts/Layout.astro";
import toki1 from "../assets/toki-1.png";
import tokihero from "../assets/toki-hero.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <Layout>
    <div class="heroContainer">
      <img src={tokihero.src} />
    </div>
    <section class="brand-mission-section sand">
      <h2>Our brand mission</h2>
      <p class="brand-mission">
        TÓKI aims to shift packaging from a practical product to a strategic, aesthetic, and sustainable tool that
        reflects the brand's DNA and creates real value for people and the planet.<br />
        We combine insight, creativity, and production in one seamless flow — from idea to finished product.
      </p>
      <a class="sand learn-more" href="../pages/astro">Learn more</a>
      <div class="wave">
        <svg width="1512" height="1003" viewBox="0 0 1512 1003" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M-4.88358 60.5557C178.396 164.506 738.037 -117.628 1528.63 60.5557C2319.22 238.739 1528.63 932.178 1528.63 932.178C1187.5 885 281.128 1112.63 -4.88358 932.178C-290.896 751.725 -4.88358 60.5557 -4.88358 60.5557Z"
            fill="#D8A8A0"></path>
        </svg>
      </div>
    </section>

    <section class="toki-flow">
      <div class="toki-flow__media">
        <img src={toki1.src} alt="TÓKI boxes" />
      </div>

      <div class="toki-flow__content">
        <h3 class="toki-flow__title">
          At TÓKI, <br />we work <br /><span class="in">in</span>
          <em class="flow">flow.</em>
        </h3>
        <a class="btn-flow" href="../pages/toki-flow">Toki Flow</a>
      </div>
    </section>
  </Layout>

  <style>
    body {
      margin: 0;
    }

    .heroContainer img {
      width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
      transform: translateX(20px);
      overflow-x: hidden;
    }

    .brand-mission-section {
      align-items: centCer;
      text-align: center;
    }

    .brand-mission-section p {
      font-size: 14px;
    }

    .learn-more {
      position: relative;
      display: inline-block;
      padding: 0.5rem 1rem;
      color: #f0ede6;
      font-size: 14px;
      text-decoration: none;
      letter-spacing: 0.5px;
      border-bottom: 1.5px solid #f0ede6;
      border-bottom-color: #f0ede6;
    }

    .learn-more:hover {
      color: #4c513a;
      border-bottom: 1.5px solid #4c513a;
      border-bottom-color: #4c513a;
    }

    .wave {
      position: absolute;
      bottom: 0;
      top: 0;
      left: 0;
      width: 100%;
      line-height: 0;
      z-index: 0;
      pointer-events: none;
    }

    .brand-mission-section {
      position: relative;
      text-align: center;
      padding: 4rem 1.5rem 10rem;
      overflow: hidden;
    }

    .brand-mission-section > *:not(.wave) {
      position: relative;
      z-index: 1;
    }

    .wave path {
      transition: fill 0.25s ease;
      pointer-events: auto;
    }

    .wave path:hover {
      fill: #4c513a;
    }

    .toki-flow {
      background: #2f2521;
      padding: 4.5rem 2rem;
    }

    .toki-flow__media {
      border-radius: 24px;
      overflow: hidden;
    }
    .toki-flow__media img {
      max-width: 100%;
      height: 100%;
      display: block;
      aspect-ratio: 12 / 10;
      object-fit: cover;
    }

    .toki-flow__content {
      color: #d8a8a0;
      display: flex;
      flex-direction: column;
      gap: 1.75rem;
    }

    .toki-flow__title {
      font-weight: 800;
      letter-spacing: 0.2px;
      line-height: 1.02;
      font-size: 60px;
      margin: 0;
      margin-top: 3rem;
    }

    .toki-flow__title .in {
      font-weight: 900;
    }
    .toki-flow__title .flow {
      font-style: italic;
      font-weight: 600;
      font-family: didot-italic;
    }

    .btn-flow {
      align-self: flex-start;
      background: #d8a8a0;
      color: #f0ede6;
      text-decoration: none;
      padding: 0.9rem 1.4rem;
      border-radius: 18px;
      font-size: 1rem;
    }
    .btn-flow:hover {
      color: #2f2521;
      background: #efcac3;
    }

    .brand-mission-section {
      text-align: center;
      padding: 5rem 2rem 7rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
    }

    .brand-mission-section h2 {
      font-weight: 700;
      font-size: 22px;
      margin: 0;
      position: relative;
    }

    .brand-mission {
      max-width: 650px;
      line-height: 2;
      margin: 0 auto;
    }

    .toki-flow {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    .toki-flow__content {
      align-items: center;
    }
    .btn-flow {
      align-self: center;
    }

    @media (min-width: 800px) {
      .heroContainer img {
        width: 100%;
        height: auto;
      }

      .brand-mission-section h2 {
        font-weight: 700;
        font-size: 28px;
        margin: 0;
        position: relative;
      }

      .brand-mission-section p {
        font-size: 18px;
      }

      .learn-more {
        font-size: 18px;
      }

      .wave {
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 120px;
      }

      .toki-flow__title {
        line-height: 1;
        font-size: 70px;
      }

      .toki-flow {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        max-width: 1920px;
        margin: 0;
        padding-left: 8rem;
      }

      .toki-flow__content {
        align-items: center;
      }
      .btn-flow {
        align-self: center;
      }
    }
  </style>
</html>
