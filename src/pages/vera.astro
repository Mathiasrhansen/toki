---
import Layout from "../layouts/Layout.astro";
import thumbnail from "../assets/vera-1.webp";
import pic1 from "../assets/vera-2.webp";
import pic2 from "../assets/vera-3.webp";
import pic3 from "../assets/vera-4.webp";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Vera</title>
  </head>
  <Layout>
    <body>
      <section class="hero">
        <img src={thumbnail.src} alt="" class="thumbnail" />
        <div class="textContainer">
          <h1>VERA</h1>
          <h2>Low-Impact Wine Collective</h2>
          <p>
            At TÓKI, we collaborated with VERA to create a packaging system that
            reflects their low-impact philosophy and modern craft
          </p>
          <p>
            The design balances Nordic calm with subtle movement, using natural
            textures, muted tones and clean structure — turning each bottle into
            a quiet statement of sustainability and style.
          </p>
        </div>
      </section>
      <section class="pictures">
        <img src={pic1.src} alt="" class="showcase" />
        <img src={pic3.src} alt="" class="showcase" />
        <img src={pic2.src} alt="" class="showcase" />
      </section>
      <section class="end">
        <a class="btn pink-bg brown" href="/cases">Explore more of our work</a>
      </section>
    </body>
  </Layout>
</html>

<style>
  body {
    margin: 0;
  }

  .hero {
    background-image: url("../assets/vera-banner.png");
    display: flex;
    justify-content: center;
    gap: 5vw;
    padding-top: 100px;
    padding-bottom: 50px;
    margin-bottom: 50px;
  }

  .thumbnail {
    width: 30vw;
    height: auto;
    border-radius: 20px;
  }

  .textContainer {
    width: 30vw;
  }

  h2 {
    margin-bottom: 20px;
  }

  .pictures {
    display: flex;
    flex-direction: row;
    gap: 5vw;
    justify-content: center;
  }

  .showcase {
    width: 20vw;
    height: auto;
    border-radius: 24px;
  }

  .end {
    background-image: url("../assets/case-bottom.png");
    padding-top: 70px;
    margin-top: 50px;
    display: flex;
    justify-content: center;
    padding-bottom: 50px;
  }

  .btn {
    padding: 20px 30px;
    text-decoration: none;
    border-radius: 20px;
  }

  .btn:hover {
    text-decoration: underline;
  }

  /* MOBILE */
  @media (max-width: 768px) {
    .hero {
      background-image: url("../assets/vera-banner.png");
      background-repeat: no-repeat;
      flex-direction: column;
      padding: 150px 20px;
      gap: 30px;
      text-align: center;
      margin-bottom: 0;
    }

    .thumbnail {
      width: 90vw;
      border-radius: 24px;
    }

    .textContainer {
      width: 90vw;
    }

    h1 {
      font-size: 48px;
      margin-bottom: 10px;
    }

    h2 {
      font-size: 18px;
      margin-bottom: 20px;
    }

    p {
      font-size: 16px;
      line-height: 1.5;
    }

    .pictures {
      flex-direction: column;
      gap: 40px;
      padding: 40px 0;
      align-items: center;
    }

    .showcase {
      width: 90vw;
      border-radius: 24px;
    }

    .end {
      background-image: url("../assets/case-bottom.png");
      background-size: cover;
      margin-top: 0;
      padding: 80px 0 100px;
      display: flex;
      justify-content: center;
    }

    .btn {
      padding: 16px 28px;
      font-size: 16px;
      border-radius: 24px;
    }
  }

  .caseContainer {
    grid-template-columns: 1fr;
  }

  .endSection {
    flex-direction: column;
    padding: 50px 0;
    text-align: center;
  }

  .textContainerEnd {
    width: 90vw;
    order: 1;
  }
</style>
