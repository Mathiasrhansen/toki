    color: #2f2521;
  }

  /* Illustration transition */
  #illustration {
    transition: opacity 0.4s ease;
  }

  /* Active state for numbered circles */
  #num1 ellipse.active,
  #num2 ellipse.active,
  #num3 ellipse.active,
  #num4 ellipse.active,
  #num5 ellipse.active {
    fill: #808369;
    transition: fill 0.3s ease;
  }

  /* Hover cursor for numbered circles */
  #num1,
  #num2,
  #num3,
  #num4,
