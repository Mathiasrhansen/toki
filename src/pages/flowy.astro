</style><script>
  // Content for each step
  const stepContent = {
    1: {
      title: "1. We start by understanding your reality",
      description:
        "Purpose: To create a shared foundation - understanding your packaging's journey and how it can generate more value for your business, brand, and the planet",
    },
    2: {
      title: "2. We shape your design DNA",
      description:
        "Purpose: To turn insight into a clear design foundation - defining the visual and structural principples that give packaging character and connect business, brand, and plant",
    },
    3: {
      title: "3. We make ideas tangible",
      description:
        "Purpose: To turn design principles into concepts that show how the packaging looks, feels, and performs in practice.",
    },
    4: {
      title: "4. We prepare the solution for the world",
      description:
        "To refine and prepare the packaging for production and scaling — ensuring it works in reality, not just on paper.",
    },
    5: {
      title: "5. We scale together",
      description:
        "Purpose: To scale the solution through the right partners and processes — ensuring it works globally, consistently, and sustainably.",
    },
  };

  // Get DOM elements
  const illustration = document.querySelector("#illustration");
  const stepInfo = document.querySelector(".step-info");
  const stepTitle = document.querySelector("#step-title");
  const stepDescription = document.querySelector("#step-description");

  const num1 = document.querySelector("#num1");
  const num2 = document.querySelector("#num2");
  const num3 = document.querySelector("#num3");
  const num4 = document.querySelector("#num4");
  const num5 = document.querySelector("#num5");

  // Function to show step content
  function showStep(stepNumber) {
    const content = stepContent[stepNumber];

    // Update text content
    stepTitle.textContent = content.title;
    stepDescription.textContent = content.description;

    // Show info box, hide illustration
    stepInfo.classList.add("active");
    illustration.style.opacity = "0";

    // Highlight active number
    [num1, num2, num3, num4, num5].forEach((num, index) => {
      const ellipse = num.querySelector("ellipse");
      if (index + 1 === stepNumber) {
        ellipse.classList.add("active");
      } else {
        ellipse.classList.remove("active");
      }
    });
  }

  // Function to reset view
  function resetView() {
    stepInfo.classList.remove("active");
    illustration.style.opacity = "1";

    // Remove all active states
    [num1, num2, num3, num4, num5].forEach((num) => {
      num.querySelector("ellipse").classList.remove("active");
    });
  }

  // Add event listeners
  num1.addEventListener("mouseenter", () => showStep(1));
  num2.addEventListener("mouseenter", () => showStep(2));
  num3.addEventListener("mouseenter", () => showStep(3));
  num4.addEventListener("mouseenter", () => showStep(4));
  num5.addEventListener("mouseenter", () => showStep(5));

  // Reset when mouse leaves the SVG
  document
    .querySelector(".toki-flow")
    .addEventListener("mouseleave", resetView);
</script>
